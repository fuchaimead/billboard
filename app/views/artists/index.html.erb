<div class='container' >
<h1>List of Artists</h1>

<% if @artist.any? %>
  <% @artist.each do |artist| %> 
   
   <h4> <%= link_to artist.name, artist_path(artist), class: 'bg-success' %> <h4>
    <% end %>
  <% else %>
  <h4> No Artists have been added </h4>
  <% end %>

  <%= link_to 'Add new artist', new_artist_path, class: 'btn btn-primary' %>
 
</div>
